<assembly>
	<id>build</id>
	<formats>
		<format>war</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>../backend/target/ssiinomore</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>**/**</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<!-- Application bundle -->
		<file>
			<source>../frontend/dist/bundles/ssiinomore.umd.min.js</source>
			<outputDirectory>/resources/js/</outputDirectory>
		</file>
		<!-- RxJs bundle -->
		<file>
			<source>../frontend/node_modules/rxjs/bundles/Rx.min.js</source>
			<outputDirectory>/resources/js/</outputDirectory>
		</file>
		<!-- Angular bundles -->
		<file>
			<source>../frontend/node_modules/@angular/core/bundles/core.umd.min.js</source>
			<outputDirectory>/resources/js/</outputDirectory>
		</file>
		<file>
			<source>../frontend/node_modules/@angular/common/bundles/common.umd.min.js</source>
			<outputDirectory>/resources/js/</outputDirectory>
		</file>
		<file>
			<source>../frontend/node_modules/@angular/http/bundles/http.umd.min.js</source>
			<outputDirectory>/resources/js/</outputDirectory>
		</file>
		<file>
			<source>../frontend/node_modules/@angular/compiler/bundles/compiler.umd.min.js</source>
			<outputDirectory>/resources/js/</outputDirectory>
		</file>
		<file>
			<source>../frontend/node_modules/@angular/forms/bundles/forms.umd.min.js</source>
			<outputDirectory>/resources/js/</outputDirectory>
		</file>
		<file>
			<source>../frontend/node_modules/@angular/platform-browser/bundles/platform-browser.umd.min.js</source>
			<outputDirectory>/resources/js/</outputDirectory>
		</file>
		<file>
			<source>../frontend/node_modules/@angular/platform-browser-dynamic/bundles/platform-browser-dynamic.umd.min.js</source>
			<outputDirectory>/resources/js/</outputDirectory>
		</file>
	</files>
</assembly>